{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/types"],
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/jest.config.ts", "src/withRouter.js"],
  "exclude": ["node_modules"]
}
